VIEW "V_SAIRPORTS" ( 
    "ID",
	"TYPE",
	"NAME",
	"LATITUDE",
	"LONGITUDE",
	"LOC_4326",
	"CONTINENT",
	"ISO_COUNTRY",
	"ISO_REGION",
	"MUNICIPALITY" ,
	"SCHEDULED_SERVICE",
	"IATA_CODE" ) 
	AS SELECT
	"ID",
	"TYPE",
	"NAME",
	"LATITUDE",
	"LONGITUDE",
	NEW ST_POINT("LONGITUDE", "LATITUDE").ST_SRID(4326) AS "LOC_4326",
	"CONTINENT",
	"ISO_COUNTRY",
	"ISO_REGION",
	"MUNICIPALITY",
	"SCHEDULED_SERVICE",
	"IATA_CODE"
FROM "SAIRPORTS" WITH READ ONLY
